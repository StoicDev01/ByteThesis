{{- .Scratch.Add "index" slice -}}
{{- range (where .Site.RegularPages "Section" "posts") -}}
    {{ 
        $.Scratch.Add "index" (dict "title" .Title "content" (.Summary | plainify) "permalink" .Permalink "categories" .Params.categories "date" .Params.date "banner" (.Resources.GetMatch "banner.png").Permalink ) 
    }}

{{- end -}}
{{ $.Scratch.Get "index" | jsonify }}